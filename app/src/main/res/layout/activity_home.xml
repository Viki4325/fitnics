<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".presentation.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/LogDetailAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/Theme.Fitnics"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/exerciseDetailCollapseToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:expandedTitleMarginStart="15dp"
            app:expandedTitleMarginBottom="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <include layout="@layout/home_wavy_stats_view" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/exerciseDetailToolBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetStartWithNavigation="2dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.Fitnics"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:theme="@style/Theme.Fitnics">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_breakfast_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="btnSearchFoodOnClick">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:fontFamily="muli_bold"
                        android:textColor="@color/black"
                        android:text="@string/breakfast_button_text"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/add_img_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_add_circle" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_lunch_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="btnSearchFoodOnClick">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:fontFamily="muli_bold"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:text="@string/add_lunch_btn_text"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/img_create_event_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_add_circle" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_dinner_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="btnSearchFoodOnClick">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:fontFamily="muli_bold"
                        android:textColor="@color/black"
                        android:text="@string/add_dinner_btn_text"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/img_create_event_icon_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_add_circle" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_exercise_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="btnSearchExerciseOnClick">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:fontFamily="muli_bold"
                        android:textColor="@color/black"
                        android:text="@string/add_exercise_btn_text"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/img_create_event_icon_4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_baseline_add_circle" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFoodLog"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:onClick="btnFoodLogOnClick"                        android:padding="20dp"
                        android:text="@string/foodLog"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExerciseLog"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:onClick="btnExerciseLogOnClick"
                        android:text="@string/exerciseLog"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        app:cornerRadius="50dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/soft_white"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:thicknessRatio="1.9"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground">

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:padding="10dp">-->

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="center"-->
<!--                        android:text="@string/notification_note"-->
<!--                        android:textSize="15sp"-->
<!--                        android:fontFamily="@font/muli"/>-->

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/Notificationbtn"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:padding="10dp"-->
<!--                        android:elevation="10dp"-->
<!--                        android:fontFamily="@font/muli"-->
<!--                        android:gravity="center"-->
<!--                        android:onClick="btnSetNotificationsOnClick"-->
<!--                        android:text="@string/notification_btn_text"-->
<!--                        android:textStyle="bold"-->
<!--                        android:layout_weight="2"-->
<!--                        app:cornerRadius="50dp" />-->

<!--                </LinearLayout>-->

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnUpdateUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="btnUpdateUserInfoOnClick"
                android:text="Update Information" />

            <Button
                android:id="@+id/btnCreateNotification"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="btnSetNotificationsOnClick"
                android:text="Set Notifications" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
